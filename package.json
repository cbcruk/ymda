{
  "name": "ymda",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @ymda/web dev",
    "build": "pnpm --filter @ymda/shared build && pnpm --filter @ymda/web build",
    "build:shared": "pnpm --filter @ymda/shared build",
    "start": "pnpm --filter @ymda/web start",
    "lint": "pnpm --filter @ymda/web lint",
    "tui": "pnpm --filter @ymda/tui start",
    "tui:dev": "pnpm --filter @ymda/tui dev",
    "tui:build": "pnpm --filter @ymda/tui build",
    "dev:all": "pnpm -r dev"
  },
  "devDependencies": {
    "typescript": "^5"
  }
}
